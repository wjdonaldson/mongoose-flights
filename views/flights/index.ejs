<%- include('../partials/header') %>

<div class="container">
  <h2>Flight List</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Airline</th>
        <th scope="col">Airport</th>
        <th scope="col">Flight #</th>
        <th scope="col">Departs</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs.toLocaleString('en-US', { timeZone: 'UTC' }) %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
