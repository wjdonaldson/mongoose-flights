<%- include('../partials/header') %>

<div class="container">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Airline</th>
          <th scope="col">Airport</th>
          <th scope="col">Flight #</th>
          <th scope="col">Departs</th>
        </tr>
      </thead>
      <tbody>
        <% flights.sort((a,b) => a.departs - b.departs).forEach(function(f) { %>
        <tr onclick="window.location='/flights/<%= f._id %>';" <%= f.departs < new Date() ? 'class=table-danger' : ''%>>
        <a href="/flights/<%= f._id %>">
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs.toLocaleString() %></td>
        </a>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
