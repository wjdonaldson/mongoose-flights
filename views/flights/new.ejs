<%- include('../partials/header') %>

<div class="container">
  <form action="/flights" method="POST">
    <div class="mb-3">
      <label for="airline" class="form-label">Airline:</label>
      <select class="form-control" name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
        <option value="Alaska">Alaska</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="airport" class="form-label">Airport:</label>
      <select class="form-control" name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
        <option value="SMF" selected>SMF</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="flightNo" class="form-label">Flight #:</label>
      <input type="number" class="form-control" name="flightNo" min="10" max="9999" />
    </div>
    <div class="mb-3">
      <label for="departs" class="form-label">Departs:</label>
      <input type="datetime-local" class="form-control" name="departs" value="<%= departsDate %>"/>
    </div>
    <div class="mb-3">
      <button type="submit" class="btn btn-primary">Add Flight</button>
    </div>
  </form>
  <br />
  <p class="mb-3"><%= errorMsg %></p>

</div>


<%- include('../partials/footer') %>
